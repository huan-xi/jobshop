<i-panel class="cell-panel-demo" title="cell 组">
    <i-cell-group>
        <i-cell title="只显示箭头" is-link></i-cell>
        <i-cell title="跳转到首页" is-link url="/pages/index/index"></i-cell>
        <i-cell title="只有 footer 点击有效" is-link url="/pages/index/index" only-tap-footer></i-cell>
        <block>
            <i-cell title="单行列表" label="附加描述" value="详细信息"></i-cell>
            <i-cell title="表单" is-link>
                
                <picker slot="footer" bindchange="bindTypeChange" range="{{types}}" value="{{typeIndex}}">
              <view class="picker">
                {{types[typeIndex]}}
              </view>
            </picker>
            </i-cell>
        </block>
        <i-cell title="开关">
            <i-switch value="{{ switch1 }}" bind:change="onChange" slot="footer">
                <i-icon type="right" slot="open"></i-icon>
                <i-icon type="close" slot="close"></i-icon>
            </i-switch>
        </i-cell>
    </i-cell-group>
</i-panel>

<view class='index'>
  <view class='public'>
    <form bindsubmit="formSubmit">
      <view class='info'>
      <!--  <view class='title'>职位信息</view>-->
              <view class='group'>
          <text class='label'>招工工种</text>
          <view class='rightBox'>
            <picker bindchange="bindTypeChange" range="{{types}}" value="{{typeIndex}}">
              <view class="picker">
                {{types[typeIndex]}}
              </view>
            </picker>
            <image src='/images/right.png'></image>
          </view>
        </view>
        <view class='group'>
          <text class='label'>招工人数:</text>
          <input class='count' name='count' type="number" placeholder='请输入招工人数'></input>
          <view class='unit'>人</view>
        </view>
        <view class='group'>
          <text class='label'>工作时间</text>
          <view class='rightBox'>
            <picker start="{{startTime}}" end="{{endTime}}" bindchange="bindTimePickerChange" mode="date" value="{{workTime}}">
              <view class="picker">
                {{workTime}}
              </view>
            </picker>
            <image src='/images/right.png'></image>
          </view>
        </view>
        <view class='group'>
          <text class='label'>计费方式</text>
          <view class='rightBox'>
            <picker bindchange="bindPickerChange" range="{{workType}}" value="{{workTypeIndex}}">
              <view class="picker">
                {{workType[workTypeIndex]}}
              </view>
            </picker>
            <image src='/images/right.png'></image>
          </view>
        </view>
        <view class='group'  wx:if="{{isByTiem}}">
          <text class='label'>大概工资:</text>
          <input class='salary' type="digit" name='salary' placeholder='请填写大概工资'></input>
          <picker class='unit' bindchange="bindPickerUnitChange" range="{{salatyType}}" value="{{salatyTypeIndex}}">
            <view class="picker">
              {{salatyType[salatyTypeIndex]}}
            </view>
          </picker>
          <image class='salary-right' src='/images/right.png'></image>
        </view>
        <view class='detail'>
          <view>详细描述</view>
          <textarea name='desc' placeholder='请填写工作详细描述信息'></textarea>
        </view>
      </view>
      <view class="uploadVideo">
        <view class="label">添加视频</view>
        <block wx:if="{{src === ''}}">
          <view class="" bindtap="chooseVideo">
            <image src='../../images/idCard.png' class='add'></image>
          </view>
          
        </block>
        <block wx:if="{{src != ''}}">
          <video src="{{src}}" class="video"></video>
          <button bindtap="chooseVideo" class='reChoose'>重新选择</button>
        </block>
      </view>
      <button formType="submit" class="btn">发布</button>
    </form>
  </view>
</view>
