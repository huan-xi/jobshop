<view>
  <i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab key="finish" title="未完成订单"></i-tab>
    <i-tab key="notFinish" title="已完成订单"></i-tab>
  </i-tabs>
  <view class='orderList'>
    <view class='orderBox' wx:for="{{orders}}" wx:key="key">
      <view id='{{item.position.positionId}}' bindtap='orderTap'>
        <view class='title'>{{item.position.type}}</view>
        <view>
          <view class='desc'>状态： {{item.pOrder.status}}</view>
        </view>
        <view>
          <view class='desc'>接单人: {{item.user.name}}</view>
        </view>
        <view>
          <view class='desc'>接单价格: {{item.user.name}}</view>
        </view>
        <view>
          <view class='desc'>工作时间: {{item.position.time}}</view>
        </view>
      </view>
      <view class='footBox'>
        <view class='leftBox' id='{{item.user.phone}}' bindtap='callTap'>
          <image src='/images/msg.png'></image>
          <view>联系工人</view>
        </view>
        <view class='rightBox'>
          <view class='block-btn' hidden='{{item.cancel||!item.notFinish}}' hover-class='block-btn-hover' id='{{item.pOrder.orderId}}' bindtap='cancelTap'>取消订单</view>
          <view wx:if="{{item.notFinish}}" bindtap='finish' hover-class='block-btn-hover' id='{{item.pOrder.orderId}}' class='block-btn'>完成订单</view>
          <view wx:elif="{{item.notCom}}" bindtap='commonTap' hover-class='block-btn-hover' id='{{item.pOrder.orderId}}' class='block-btn'>评价</view>
          <view bindtap='deleteTap' id='{{item.pOrder.orderId}}' hidden='{{item.notFinish}}' hover-class='block-btn-hover' class='block-btn'>删除订单</view>
        </view>
      </view>
    </view>
  </view>
  <view>
    <view hidden='{{orders.length}}'>
      <abnor type="DATA" title="没有订单,下拉试试"></abnor>
    </view>
  </view>
</view>