.desc {
  color: gray;
  display: inline-block;
  margin-top: 5rpx;
  margin-right: 20rpx;
  font-size: 25rpx;
}
.orderBox {
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 5px;
  margin-top: 20rpx;
  padding: 20rpx;
}
.rightBox view {
  float: right;
}

.leftBox view {
  float: left;
  font-size: 32rpx;
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.leftBox {
  margin: 5px 30rpx;
}

.leftBox image {
  float: left;
  width: 50rpx;
  height: 50rpx;
}

.block-btn {
  padding: 10rpx 20rpx;
  border: solid 1rpx gray;
  font-size: 25rpx;
  margin-right: 40rpx;
}

.block-btn-hover {
  background-color: gray !important;
}

.footBox {
  margin-top: 20rpx;
  border-top: solid 1rpx #e9eaec;
}
