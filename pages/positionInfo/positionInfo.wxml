<i-panel title="修改招工信息">
  <i-cell-group>
    <i-cell title="选择招工工种" is-link label="修改人数不能小于已经招工人数">
      <picker slot="footer" bindchange="bindTypeChange" range="{{types}}" value="{{typeIndex}}">
        <view class="picker">
          {{types[typeIndex]}}
        </view>
      </picker>
    </i-cell>
    <i-cell title="填写招工人数">
        <input slot="footer" autofocus value='{{count}}' type="number" bindinput='countInputChange' placeholder='请输入招工人数'></input>
    </i-cell>
    <i-cell title="选择工作时间" is-link label="选择今天或者明天">
      <picker slot="footer" start="{{startTime}}" end="{{endTime}}" bindchange="bindTimePickerChange" mode="date" value="{{workTime}}">
        <view class="picker">
          {{workTime}}
        </view>
      </picker>
    </i-cell>
    <i-cell title="选择计价方式" is-link>
      <picker slot="footer" bindchange="bindPickerChange" range="{{workType}}" value="{{workTypeIndex}}">
        <view>
          {{workType[workTypeIndex]}}
        </view>
      </picker>
    </i-cell>
    <i-cell title="请填写工资">
        <input slot="footer" type="digit" value='{{salary}}' bindinput='salaryInputChange' placeholder='请填写工资'></input>
    </i-cell>
    <i-cell title="选择工种时长" is-link label="最长12小时">
      <picker slot="footer" bindchange="bindPickerUnitChange" range="{{salatyType}}" value="{{salatyTypeIndex}}">
        <view class="picker">
          {{salatyType[salatyTypeIndex]}}
        </view>
      </picker>
    </i-cell>
    <i-panel>
      <i-input bindchange="descInputChange" value='{{desc}}' type="textarea" title="工种详细描述" placeholder="工种详细描述(最多100字)" maxlength="100" />
    </i-panel>
  </i-cell-group>
  <i-panel title="添加视频(可选)">
    <view class="uploadVideo">
      <block wx:if="{{src === ''}}">
        <view class="" bindtap="chooseVideo">
          <image src='../../images/idCard.png' class='add'></image>
        </view>
      </block>
      <block wx:if="{{src != ''}}">
        <video src="{{src}}" class="video"></video>
        <i-button bind:click="chooseVideo" type="ghost">重新选择</i-button>
      </block>
    </view>
  </i-panel>
  <i-button bind:click="formSubmit" type="primary" shape="circle">确定发布</i-button>
</i-panel>