.info{
  width: 100%;
  height: 300rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}
.placeholder-classP{
  font-size: 30rpx;
}
.upload{
background: #fff;
border: 1px dashed #dcdee2;
border-radius: 4px;
text-align: center;
cursor: pointer;
position: relative;
overflow: hidden;
transition: border-color .2s ease;
}
.upload-pic{
  padding: 20rpx;
}
.select-pic image{
  width: 156rpx;
  height: 156rpx;
}
.select-pic{
  position: relative;
}
.delete-icon{
  position: absolute;
  top:0;
  right:10rpx;
}