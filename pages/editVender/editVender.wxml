<i-panel title="修改公司信息">
  <i-cell-group>
    <i-input value="{{ vender.name }}" bind:change='nameInputChange' title="公司名称" placeholder="请输入公司名称" />
    <i-input value="{{ vender.contacts }}" bind:change='contactsInputChange' title="联系人姓名" placeholder="请输入联系人姓名" />
    <i-input value="{{ vender.phone }}" type="number" bind:change='phoneInputChange' title="联系电话" placeholder="请输入手机号" />
    <i-cell label="选择公司地址">
      <view bindtap='onChangeAddress'>
        <text class='addr' wx:if="{{address.name}}">{{address.name}}</text>
        <view class='chooseAddr' wx:else="">点击选择公司地址</view>
      </view>
    </i-cell>
    <i-input value="{{ vender.addressDesc }}"  bind:change='address_descInputChange' type="textarea" title="地址详细描述" placeholder="请输入详细地址(最多100字)" maxlength="100" />
  </i-cell-group>
</i-panel>
<view class='sava'>
  <i-button bind:click="formSubmit" type="primary" shape="circle">保存信息</i-button>
</view>